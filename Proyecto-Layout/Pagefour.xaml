<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Layout.Pagefour"
             Title="STACK LAYOUT">
    
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Etiqueta 1 -->
        <Label Text="Angel Armando Vela Tituaña" 
               SemanticProperties.HeadingLevel="Level1" 
               Style="{StaticResource Headline}"/>
        <Label Text=" " HeightRequest="20" />
        <!-- Etiqueta 2 -->
        <Label Text="Esteban Eduardo Galindo Vasquez" 
               SemanticProperties.HeadingLevel="Level2" 
               Style="{StaticResource SubHeadline}" />
        <Label Text=" " HeightRequest="20" />
        <!-- Etiqueta 3 -->
        <Label Text="Mateo Mikael Pillajo Guijarro" 
               SemanticProperties.HeadingLevel="Level3" 
               Style="{StaticResource SubHeadline}" />
        <Label Text=" " HeightRequest="20" />
        <!-- Botón que redirige a PageDos -->
        <Button
            x:Name="CounterBtn"
            Text="Ir a FlexLayout" Clicked="OnButtonClicked" />
    </StackLayout>
</ContentPage>